<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/lesson_topic_add_mtv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lesson_topic_add_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/lesson_topic_add_met_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="@string/lesson_topic_add_title_tint"
                android:inputType="textMultiLine"
                android:maxHeight="96dp"
                android:minHeight="48dp"
                android:textColorHint="#757575"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lesson_topic_add_mtv_title" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/lesson_topic_add_mtv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/lesson_topic_add_description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lesson_topic_add_met_title" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/lesson_topic_add_met_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="@string/lesson_topic_add_description_tint"
                android:inputType="textMultiLine"
                android:maxHeight="96dp"
                android:minHeight="48dp"
                android:textColorHint="#757575"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lesson_topic_add_mtv_description" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/lesson_topic_add_mtv_resource_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/lesson_topic_add_resource_link"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lesson_topic_add_met_description" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/lesson_topic_add_met_resource_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="@string/lesson_topic_add_resource_link_tint"
                android:inputType="textMultiLine"
                android:maxHeight="96dp"
                android:minHeight="48dp"
                android:textColorHint="#757575"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lesson_topic_add_mtv_resource_link" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>