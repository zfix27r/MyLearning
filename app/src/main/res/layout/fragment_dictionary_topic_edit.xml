<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="ru.sergeyzabelin.mylearning.data.common.Status" />

        <import type="ru.sergeyzabelin.mylearning.data.common.Resource" />

        <import type="androidx.lifecycle.LiveData" />

        <import type="ru.sergeyzabelin.mylearning.data.model.db.Topic" />

        <import type="ru.sergeyzabelin.mylearning.domain.model.SaveTopicModel" />

        <variable
            name="topic"
            type="LiveData&lt;Resource&lt;Topic>>" />

        <variable
            name="saveTopicModel"
            type="SaveTopicModel" />

        <variable
            name="contributorStatus"
            type="Status" />

        <variable
            name="retryCallback"
            type="ru.sergeyzabelin.mylearning.ui.common.RetryCallback" />
    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/topicTitleLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/dictionary_add_title"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/topicTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:maxHeight="110dp"
                        android:text="@{saveTopicModel.title}"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/topicLabelLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="@string/dictionary_add_label"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/topicLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:maxHeight="110dp"
                        android:text="@{saveTopicModel.label}"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:srcCompat="@drawable/ic_baseline_done_24"
            android:contentDescription="@string/add" />

        <include
            android:id="@+id/loading"
            layout="@layout/loading_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:callback="@{() -> retryCallback.retry()}"
            app:resource="@{(Resource) topic}"
            tools:visibility="gone" />
    </FrameLayout>

</layout>