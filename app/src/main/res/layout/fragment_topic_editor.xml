<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/topic_editor_title"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/offset_small"
        android:layout_marginTop="@dimen/offset_medium"
        android:layout_marginEnd="@dimen/offset_small"
        android:hint="@string/title_name"
        app:errorEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/topic_editor_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/topic_editor_subtitle"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/offset_small"
        android:layout_marginTop="@dimen/offset_small"
        android:layout_marginEnd="@dimen/offset_small"
        android:hint="@string/subtitle_name"
        app:errorEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topic_editor_title">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/topic_editor_subtitle_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topic_editor_parent_topic"
        android:background="?attr/selectableItemBackground"
        android:layout_width="@dimen/zero"
        android:layout_height="@dimen/item_size_default_medium"
        android:layout_marginTop="@dimen/offset_small"
        app:layout_constraintEnd_toEndOf="@+id/topic_editor_title"
        app:layout_constraintStart_toStartOf="@+id/topic_editor_title"
        app:layout_constraintTop_toBottomOf="@+id/topic_editor_subtitle">

        <TextView
            android:id="@+id/topic_editor_parent_topic_title"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/offset_medium"
            android:layout_marginEnd="@dimen/offset_small"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            app:layout_constraintBottom_toTopOf="@+id/topic_editor_parent_topic_subtitle"
            app:layout_constraintEnd_toStartOf="@+id/topic_editor_parent_topic_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Котлин" />

        <TextView
            android:id="@+id/topic_editor_parent_topic_subtitle"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/offset_small"
            android:gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/topic_editor_parent_topic_title"
            app:layout_constraintStart_toStartOf="@+id/topic_editor_parent_topic_title"
            app:layout_constraintTop_toBottomOf="@+id/topic_editor_parent_topic_title"
            tools:text="Kotlin" />

        <ImageView
            android:id="@+id/topic_editor_parent_topic_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_arrow_forward_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>