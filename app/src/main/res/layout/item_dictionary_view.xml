<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="dictionary"
            type="ru.sergeyzabelin.mylearning.data.model.db.Dictionary" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dictionary_add_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dictionary_add_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{ dictionary.title }"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Шаблон функционального дизайна" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dictionary_add_title_original"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{ dictionary.name }"
            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
            app:layout_constraintEnd_toEndOf="@+id/dictionary_add_title"
            app:layout_constraintStart_toStartOf="@+id/dictionary_add_title"
            app:layout_constraintTop_toBottomOf="@+id/dictionary_add_title"
            tools:text="Functional design" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dictionary_add_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@{ dictionary.description }"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dictionary_add_title_original"
            tools:text="Гарантирует, что каждый модуль компьютерной программы имеет только одну обязанность и исполняет её с минимумом побочных эффектов на другие части программы." />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dictionary_add_description" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>