<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topic_editor_parent_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_size"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/topic_editor_parent_item_select"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/offset"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/topic_editor_parent_item_next"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topic_editor_parent_item_next"
        app:srcCompat="@drawable/ic_ui_done" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/topic_editor_parent_item_title"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        app:layout_constraintBottom_toTopOf="@+id/topic_editor_parent_item_subtitle"
        app:layout_constraintEnd_toStartOf="@+id/topic_editor_parent_item_next"
        app:layout_constraintStart_toEndOf="@+id/topic_editor_parent_item_select"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Сокращенное логическое ИЛИ (||)" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/topic_editor_parent_item_subtitle"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/offset"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/topic_editor_parent_item_title"
        app:layout_constraintStart_toStartOf="@+id/topic_editor_parent_item_title"
        app:layout_constraintTop_toBottomOf="@+id/topic_editor_parent_item_title"
        tools:text="Logical OR" />

    <Button
        android:id="@+id/topic_editor_parent_item_next"
        style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_ui_arrow_forward"
        android:text="@string/zero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>