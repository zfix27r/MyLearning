<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="ru.sergeyzabelin.mylearning.ui.main.MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_dictionaryFragment"
            app:destination="@id/dictionaryFragment" />
        <action
            android:id="@+id/action_mainFragment_to_dictionaryExtendedFragment"
            app:destination="@id/dictionaryExtendedFragment" />
    </fragment>

    <fragment
        android:id="@+id/dictionaryFragment"
        android:name="ru.sergeyzabelin.mylearning.ui.dictionary.DictionaryFragment"
        tools:layout="@layout/fragment_dictionary" >
        <action
            android:id="@+id/action_dictionaryFragment_self"
            app:destination="@id/dictionaryFragment" />
        <argument
            android:name="topicId"
            app:argType="long"
            android:defaultValue="1L" />
        <action
            android:id="@+id/action_dictionaryFragment_to_dictionaryExtendedFragment"
            app:destination="@id/dictionaryExtendedFragment"
            app:popUpTo="@id/dictionaryFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/quoteFragment"
        android:name="ru.sergeyzabelin.mylearning.QuoteFragment"
        tools:layout="@layout/fragment_quote" >
        <argument
            android:name="topicId"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/dictionaryExtendedFragment"
        android:name="ru.sergeyzabelin.mylearning.ui.dictionary.extended.DictionaryExtendedFragment"
        tools:layout="@layout/fragment_dictionary_extended" >
        <argument
            android:name="topicId"
            app:argType="long"
            android:defaultValue="1L" />
        <action
            android:id="@+id/action_dictionaryExtendedFragment_to_dictionaryEditorFragment"
            app:destination="@id/dictionaryEditorFragment" />
        <action
            android:id="@+id/action_dictionaryExtendedFragment_to_dictionaryFragment"
            app:destination="@id/dictionaryFragment"
            app:popUpTo="@id/dictionaryExtendedFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_dictionaryExtendedFragment_self"
            app:destination="@id/dictionaryExtendedFragment" />
    </fragment>
    <fragment
        android:id="@+id/dictionaryEditorFragment"
        android:name="ru.sergeyzabelin.mylearning.ui.dictionary.editor.DictionaryEditorFragment"
        tools:layout="@layout/fragment_dictionary_editor" >
        <argument
            android:name="topicId"
            app:argType="long" />
        <action
            android:id="@+id/action_dictionaryEditorFragment_to_dictionaryTopicAddFragment"
            app:destination="@id/dictionaryTopicAddFragment" />
        <action
            android:id="@+id/action_dictionaryEditorFragment_to_dictionaryTopicEditFragment"
            app:destination="@id/dictionaryTopicEditFragment" />
        <action
            android:id="@+id/action_dictionaryEditorFragment_self"
            app:destination="@id/dictionaryEditorFragment" />
    </fragment>
    <fragment
        android:id="@+id/dictionaryTopicAddFragment"
        android:name="ru.sergeyzabelin.mylearning.ui.dictionary.editor.DictionaryEditorTopicAddFragment"
        tools:layout="@layout/fragment_dictionary_topic_add" >
        <argument
            android:name="topicId"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/dictionaryTopicEditFragment"
        android:name="ru.sergeyzabelin.mylearning.ui.dictionary.editor.DictionaryEditorTopicEditFragment"
        tools:layout="@layout/fragment_dictionary_topic_edit" >
        <argument
            android:name="topicId"
            app:argType="long" />
    </fragment>

</navigation>